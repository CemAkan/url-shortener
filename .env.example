# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name
DB_PORT=5432

# Application Port
PORT=3000

# Redis Configuration
REDIS_ADDR=localhost:6379

# JWT Secret Key (Change this to a secure random string)
JWT_SECRET=your_super_secret_jwt_key

# Click Tracking Threshold
CLICK_THRESHOLD=10

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# SMTP Configuration for Email Sending
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password
SMTP_FROM=Your Name <your_email@yourdomain.com>

# Cache Threshold for Daily Clicks
DAILY_CLICK_CACHE_THRESHOLD=100

# Admin Panel Credentials (Change these in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password